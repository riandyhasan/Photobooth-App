{
  "name": "photobooth-app",
  "productName": "Milio Photobooth App",
  "description": "An desktop app to print your photo",
  "version": "1.0.0",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-packager . milio --platform=win32 --arch=x64 --overwrite",
    "dist": "electron-builder --win"
  },
  "repository": "git@github.com:riandyhasan/Photobooth-App.git",
  "author": "riandyhasan <riandyhsn@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "@electron/remote": "^2.1.1",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "googleapis": "^128.0.0",
    "html5-qrcode": "^2.3.8",
    "jquery": "^3.7.1",
    "node-printer": "^1.0.4",
    "qrcode": "^1.5.3",
    "qrcode-reader": "^1.0.4",
    "zuzel-printer": "^1.0.4"
  },
  "build": {
    "appId": "com.milio.app",
    "productName": "Milio Photobooth App",
    "copyright": "Copyright Â© 2023 Milio",
    "mac": {
      "icon": "./src/assets/images/logo.png",
      "target": [
        "zip",
        "dmg"
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "icon": "./src/assets/images/logo.ico",
      "publisherName": "Milio",
      "publish": [
        "github"
      ],
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ]
    },
    "dmg": {
      "icon": "./src/assets/images/logo.png",
      "title": "Milio Photobooth App"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./src/assets/images/logo.ico",
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "installerHeaderIcon": "./src/assets/images/logo.ico",
      "deleteAppDataOnUninstall": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "riandyhasan",
        "repo": "Photobooth-App",
        "vPrefixedTagName": true,
        "private": false,
        "releaseType": "draft"
      }
    ]
  }
}
